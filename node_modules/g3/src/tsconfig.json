{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "jsx": "preserve",
    "newLine": "LF",
    "watch": true,
    "noImplicitAny": false,
    "removeComments": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**/*.ts"
  ],
  "files": [
    "api/api.ts",
    "api/client/apps_files.ts",
    "api/client/apps_folders.ts",
    "api/client/apps.ts",
    "api/client/search.ts",
    "api/client/user.ts",
    "api/client/users_tokens.ts",
    "api/client/users.ts",
    "api/http.ts",
    "api/index.ts",
    "app/config/app/index.ts",
    "app/config/g3Config/index.ts",
    "app/config/index.ts",
    "app/config/routes/index.ts",
    "app/config/sourceDir/index.ts",
    "app/config/store/index.ts",
    "app/index.ts",
    "app/parse/index.ts",
    "app/parse/parseSourceFiles.ts",
    "app/parse/prepare.ts",
    "app/watch/index.ts",
    "cli/build/index.ts",
    "cli/index.ts",
    "cli/run/index.ts",
    "cli/serve/index.ts",
    "cli/status/index.ts",
    "home/index.ts",
    "index.ts",
    "lib/copy/index.ts",
    "lib/index.ts",
    "lib/location/index.spec.ts",
    "lib/location/index.ts",
    "lib/read/index.ts",
    "lib/remove/index.ts",
    "lib/translate/index.ts",
    "lib/translate/utils.ts",
    "lib/translate/yml.ts",
    "lib/utils/index.ts",
    "lib/write/index.ts",
    "models/const.ts",
    "models/home.ts",
    "models/index.ts",
    "models/lib.ts",
    "test/index.ts",
    "test/integration/build.ts",
    "typings/assertion-error/assertion-error.d.ts",
    "typings/async/async.d.ts",
    "typings/bluebird/bluebird.d.ts",
    "typings/chai/chai.d.ts",
    "typings/chokidar/chokidar.d.ts",
    "typings/commander/commander.d.ts",
    "typings/fs-extra/fs-extra.d.ts",
    "typings/js-base64/js-base64.d.ts",
    "typings/js-yaml/js-yaml.d.ts",
    "typings/lodash/lodash.d.ts",
    "typings/mocha/mocha.d.ts",
    "typings/node-uuid/node-uuid.d.ts",
    "typings/node/node.d.ts",
    "typings/slash/slash.d.ts",
    "typings/source-map/source-map.d.ts"
  ],
  "exclude": [
    "bower_components",
    "node_modules",
    "public"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  },
  "atom": {
    "rewriteTsconfig": true
  }
}
